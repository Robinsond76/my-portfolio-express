<%- include('./partials/header.ejs') %>

<div class="header">
  <h1>Contact Me</h1>
  <h2>Contact Form</h2>
</div>
<div class="contact-form">
  <form method="POST" name="contact">
    <input type="hidden" name="form-name" value="contact" />
    <div class="contact-form__text-fields">
      <input
        type="text"
        class="contact-form__text-input name-input"
        placeholder="Name"
        name="name"
      />
      <input
        type="text"
        class="contact-form__text-input subject-input"
        placeholder="Subject"
        name="subject"
      />
      <input
        type="email"
        class="contact-form__text-input email-input"
        placeholder="Email Address"
        name="email"
      />
      <textarea
        class="contact-form__message-input message-input"
        placeholder="Enter Message"
        name="message"
      ></textarea>
    </div>
    <button type="submit" class="btn btn--dark">
      Submit
    </button>
  </form>
</div>

